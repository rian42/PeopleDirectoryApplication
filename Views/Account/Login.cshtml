@using PeopleDirectoryApplication.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="screen">
    <div class="login-layout">
        <h4 class="text-center mb-4">Log In</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control">
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-buttons mt-4" style="margin-top: 10px;">
                    <input class="btn btn-primary" type="submit" value="Log in" />
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>